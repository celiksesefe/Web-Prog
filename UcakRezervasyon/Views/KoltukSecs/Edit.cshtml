@model UcakRezervasyon.Models.KoltukSec

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>KoltukSec</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-field col-lg-6">
                <label asp-for="ucusId" class="control-label"></label>
                <select asp-for="ucusId" class="form-control" asp-items="ViewBag.ucusId"></select>
                <span asp-validation-for="ucusId" class="text-danger"></span>
            </div>

            <div class="form-field col-lg-6">
                <label asp-for="tcNo" class="control-label"></label>
                <input asp-for="tcNo" class="form-control" />
                <span asp-validation-for="tcNo" class="text-danger"></span>
            </div>
            <div class="form-field col-lg-6">
                <label asp-for="koltukNumarasi" class="control-label"></label>
                <input asp-for="koltukNumarasi" class="form-control" />
                <span asp-validation-for="koltukNumarasi" class="text-danger"></span>
            </div>
            <div class="form-field col-lg-6 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="kiralanmaDurumu" /> @Html.DisplayNameFor(model => model.kiralanmaDurumu)
                </label>
            </div>
            <div class="form-field col-lg-6">
                <input type="submit" value="Save" class="submit-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localization.Getkey("listeyedon")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
