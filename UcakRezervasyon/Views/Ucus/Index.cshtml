@model IEnumerable<UcakRezervasyon.Models.Ucus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                UçuşId
            </th>
            <th>
                @Html.DisplayNameFor(model => model.guzergah)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ucak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ucusZamani)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem=> item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.guzergah.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ucak.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ucusZamani)
                </td>
                <td>

                    <a asp-action="Create" asp-controller="KoltukSecs">Bilet Al</a>

                </td>
            </tr>
        }
    </tbody>
</table>
