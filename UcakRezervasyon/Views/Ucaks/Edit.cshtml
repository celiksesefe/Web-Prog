@model UcakRezervasyon.Models.Ucak

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ucak</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-field col-lg-6">
                <label asp-for="UcakModeliId" class="control-label"></label>
                <select asp-for="UcakModeliId" class="form-control" asp-items="ViewBag.UcakModeliId"></select>
                <span asp-validation-for="UcakModeliId" class="text-danger"></span>
            </div>
            <div class="form-field col-lg-6">
                <label asp-for="KoltukDuzeniId" class="control-label"></label>
                <select asp-for="KoltukDuzeniId" class="form-control" asp-items="ViewBag.KoltukDuzeniId"></select>
                <span asp-validation-for="KoltukDuzeniId" class="text-danger"></span>
            </div>
            <div class="form-field col-lg-6">
                <label asp-for="KoltukSayisi" class="control-label"></label>
                <input asp-for="KoltukSayisi" class="form-control" />
                <span asp-validation-for="KoltukSayisi" class="text-danger"></span>
            </div>
            <div class="form-field col-lg-6">
                <input type="submit" value="Save" class="submit-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localization.Getkey("listeyedon")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
